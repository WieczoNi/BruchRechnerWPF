        xmlns:local="clr-namespace:BruchRechnerWPF"
        mc:Ignorable="d"
        Title="Bruch Rechner" Icon="/calculator-2374442_1280.png" Background="#FF737373" Height="389" Width="785" MinWidth="785" MinHeight="389">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="697*"/>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="zähler1" HorizontalAlignment="Left" Margin="168,91,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Background="#FF565656" BorderBrush="#FF717171" Foreground="White" RenderTransformOrigin="0.764,1.842" TextChanged="zähler1_TextChanged" FontSize="36"/>
        <TextBox x:Name="nenner1" HorizontalAlignment="Left" Margin="168,210,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Background="#FF565656" BorderBrush="#FF717171" Foreground="White" RenderTransformOrigin="0.378,-1.178" TextChanged="nenner1_TextChanged" FontSize="36"/>
